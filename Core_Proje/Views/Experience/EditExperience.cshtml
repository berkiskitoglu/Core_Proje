@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim Düzenleme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>#</label>
                        <input type="text" class="form-control" asp-for="ExperienceID">
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="date" class="form-control" asp-for="Date">
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}



