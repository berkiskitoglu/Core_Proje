@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Mesaj Gönderme Paneli</h4>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label>Konu</label>
                    <input type="text" class="form-control" asp-for="Subject">
                </div>

                <div class="form-group">
                    <label>Alıcı</label>
                    <input type="text" class="form-control" asp-for="Receiver">
                </div>

                <div class="form-group">
                    <label>Mesaj</label>
                    <textarea class="form-control" asp-for="MessageContent" rows="4"></textarea>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
            </form>
        </div>
    </div>
</div>

