@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detay Sayfası</h4>
            <form class="forms-sample">
                <div class="form-group">
                    <label>#</label>
                    <input type="text" class="form-control" asp-for="WriterMessageID">
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Subject">
                </div>
                <div class="form-group">
                    <label>Gönderen</label>
                    <input type="text" class="form-control" asp-for="SenderName">
                </div>
                <div class="form-group">
                    <label>Alıcı</label>
                    <input type="text" class="form-control" asp-for="ReceiverName">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" asp-for="Date">
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" asp-for="MessageContent" rows="4"></textarea>
                </div>
                <a asp-action="ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
                <a asp-action="SenderMessageList" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>

            </form>
        </div>
    </div>
</div>
