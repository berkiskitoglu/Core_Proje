@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Hizmet Ekleme Paneli</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceID)
                    <br />
                    @Html.Label("Deneyim Başlığı")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />

                    @Html.Label("Resim Yolu")
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br />

                    <br />
                    <button class="btn btn-outline-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}



