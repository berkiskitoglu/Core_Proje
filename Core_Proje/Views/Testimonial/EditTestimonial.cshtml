@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="card-header border-0">
    <h3 class="mb-0">Referans Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Yetenek Ekleme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        <input type="text" class="form-control" asp-for="TestimonialID">
                    </div>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="ClientName">
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        <input type="text" class="form-control" asp-for="Company">
                    </div>

                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        <textarea class="form-control" asp-for="Comment" rows="4"></textarea>
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}

