@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Referans Ekleme Paneli</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Referansın Adı</label>
                        <input type="text" class="form-control" asp-for="ClientName">
                    </div>
                    <div class="form-group">
                        <label>Çalıştığı Yer</label>
                        <input type="text" class="form-control" asp-for="Company">
                    </div>
                 
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Ünvan</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" asp-for="Comment" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}


