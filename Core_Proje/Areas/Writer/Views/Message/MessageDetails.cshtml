@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<h1>Mesaj Detayları</h1>


<form class="form-group">

    @Html.HiddenFor(x => x.WriterMessageID)
    <br />
    @Html.Label("Gönderen Adı")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderen Mail")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent,5,1, new { @class = "form-control" })
    <br />
</form>


